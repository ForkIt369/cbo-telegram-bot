# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Server Configuration
PORT=3000
NODE_ENV=production

# CBO Agent Configuration
CBO_AGENT_PATH=./agents/cbo-agent.js

# Logging
LOG_LEVEL=info

# Webhook URL (for production)
WEBHOOK_URL=https://your-app.ondigitalocean.app

# Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Whitelist Configuration
# The whitelist is managed via config/whitelist.json
# Admin users can use /whitelist, /adduser, and /removeuser commands

# MCP (Model Context Protocol) Configuration
# Enable MCP tools in the bot
ENABLE_MCP_TOOLS=true

# Context7 MCP Configuration
# Transport: stdio (development) or http (production)
MCP_CONTEXT7_TRANSPORT=stdio
# For HTTP transport (production)
MCP_CONTEXT7_ENDPOINT=https://mcp-context7.example.com
MCP_CONTEXT7_API_KEY=your_context7_api_key_here

# Perplexity MCP Configuration (optional)
MCP_PERPLEXITY_ENABLED=false
MCP_PERPLEXITY_TRANSPORT=http
MCP_PERPLEXITY_ENDPOINT=https://mcp-perplexity.example.com
MCP_PERPLEXITY_API_KEY=your_perplexity_api_key_here

# GitHub MCP Configuration (optional)
MCP_GITHUB_ENABLED=false
MCP_GITHUB_TRANSPORT=http
MCP_GITHUB_ENDPOINT=https://mcp-github.example.com
MCP_GITHUB_API_KEY=your_github_api_key_here